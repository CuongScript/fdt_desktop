{
  "name": "fdt-desktop",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"ng serve\" \"cd electron-forge && cross-env NODE_ENV=development electron-forge start\"",
    "build:angular": "ng build --configuration production",
    "package": "npm run build:angular && cd electron-forge && cross-env NODE_ENV=production electron-forge package",
    "make": "npm run build:angular && cd electron-forge && cross-env NODE_ENV=production electron-forge make",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:electron": "jest"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/material": "^19.2.14",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.5",
    "bootstrap-icons": "^1.12.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.3",
    "@angular/cli": "^19.2.3",
    "@angular/compiler-cli": "^19.2.0",
    "@electron-forge/cli": "^7.8.0",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^29.5.14",
    "chai": "^5.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-mocha": "^13.1.0",
    "jasmine-core": "~5.6.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "mock-fs": "^5.5.0",
    "sinon": "^20.0.0",
    "ts-jest": "^29.3.2",
    "typescript": "~5.7.2",
    "wait-on": "^8.0.3"
  }
}
